<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Saviynt Demo App</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('../partials/nav') %>
  <div class="container">
    <div class="page-header">
      <h1 class="page-title">My Profile</h1>
      <a href="/users/change-password" class="btn btn-primary">Change Password</a>
    </div>
    <div class="card">
      <h2 class="card-header">Profile Information</h2>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
        <div>
          <div class="text-sm text-gray-600">Username</div>
          <div style="margin-top: 0.5rem; font-weight: 600;"><%= profile.username %></div>
        </div>
        <div>
          <div class="text-sm text-gray-600">Name</div>
          <div style="margin-top: 0.5rem; font-weight: 600;"><%= profile.first_name %> <%= profile.last_name %></div>
        </div>
        <div>
          <div class="text-sm text-gray-600">Email</div>
          <div style="margin-top: 0.5rem;"><%= profile.email %></div>
        </div>
        <div>
          <div class="text-sm text-gray-600">Department</div>
          <div style="margin-top: 0.5rem;"><%= profile.department || 'N/A' %></div>
        </div>
        <div>
          <div class="text-sm text-gray-600">Location</div>
          <div style="margin-top: 0.5rem;"><%= profile.location || 'N/A' %></div>
        </div>
        <div>
          <div class="text-sm text-gray-600">Roles</div>
          <div style="margin-top: 0.5rem;">
            <% if (profile.roles) { %>
              <% profile.roles.split(',').forEach(role => { %>
                <span class="badge badge-primary"><%= role %></span>
              <% }) %>
            <% } else { %>
              <span>No roles assigned</span>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
